<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".ManagerPanel.AddEmployeeActivity"
        android:background="@drawable/employee_home_background">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:text="@string/employeeGender"
            android:textSize="25sp"/>

        <!--Name-->
        <RadioGroup
            android:id="@+id/employeeAddGenderGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/Male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/male" />

            <RadioButton
                android:id="@+id/Female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/female" />
        </RadioGroup>

        <ImageView
            android:id="@+id/employeePic"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/employee_pic"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:text="@string/name"
            android:textSize="25sp"/>
        <EditText
            android:id="@+id/etEmployeeAddName"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@color/edText"/>
        <!--email-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:text="@string/email"
            android:textSize="25sp"/>
        <EditText
            android:id="@+id/etEmployeeAddEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"/>
        <!--password-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:text="@string/password"
            android:textSize="25sp"/>
        <EditText
            android:id="@+id/etEmployeeAddPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/edText"
            android:inputType="textPassword"/>
        <!--Phone-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:text="@string/phone"
            android:textSize="25sp"/>
        <EditText
            android:id="@+id/etEmployeeAddPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/edText"/>
        <!--Address-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:text="@string/address"
            android:textSize="25sp"/>
        <EditText
            android:id="@+id/etEmployeeAddAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/edText"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:text="@string/department"
            android:textSize="25sp"/>

        <Spinner
            android:id="@+id/spinnerDepartment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/edText"
            android:entries="@array/department_options"/>

        <android.support.v7.widget.CardView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="30dp"
            android:layout_marginLeft="90dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="12dp">

            <Button
                android:id="@+id/btnEmployeeAdd"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:background="@color/btcolor"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="@string/add"/>

        </android.support.v7.widget.CardView>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
