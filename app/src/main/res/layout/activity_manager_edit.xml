<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="30dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        tools:context=".ManagerPanel.ManagerEditActivity"
        android:background="@drawable/employee_home_background">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/room_review" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:text="@string/name"
            android:textSize="25sp"/>
        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/edText"/>

        <LinearLayout
            android:id="@+id/roomElement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:text="@string/roomSize"
                android:textSize="25sp"/>
            <EditText
                android:id="@+id/etRoomSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/edText"
                android:inputType="number"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:text="@string/bed"
                android:textSize="25sp"/>
            <EditText
                android:id="@+id/etBed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:background="@color/edText"
                android:inputType="number"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:text="@string/roomAdult"
                android:textSize="25sp"/>
            <EditText
                android:id="@+id/etAdult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/edText"
                android:ems="10"
                android:inputType="number" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:text="@string/roomChild"
                android:textSize="25sp"/>
            <EditText
                android:id="@+id/etChild"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/edText"
                android:ems="10"
                android:inputType="number" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:text="@string/roomQuantity"
                android:textSize="25sp"/>
            <EditText
                android:id="@+id/etQuantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/edText"
                android:ems="10"
                android:inputType="number" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:text="@string/roomPrice"
                android:textSize="25sp"/>
            <EditText
                android:id="@+id/etPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/edText"
                android:ems="10"
                android:inputType="number" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/eventElement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:text="@string/description"
                android:textSize="25sp"/>
            <EditText
                android:id="@+id/etDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/edText"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:text="@string/discount_label"
                android:textSize="25sp"/>
            <EditText
                android:id="@+id/etDiscount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/edText"
                android:inputType="numberDecimal"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:text="@string/startTime"
                android:textSize="25sp"/>

            <EditText
                android:id="@+id/etStartTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="date"
                android:background="@color/edText"
                android:hint="@string/date_format_short"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:text="@string/endTime"
                android:textSize="25sp"/>

            <EditText
                android:id="@+id/etEndTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/edText"
                android:ems="10"
                android:inputType="date"
                android:hint="@string/date_format_short"/>
        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="30dp"
            android:layout_marginLeft="90dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="12dp">

            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/btcolor"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="@string/submit"/>
        </android.support.v7.widget.CardView>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>