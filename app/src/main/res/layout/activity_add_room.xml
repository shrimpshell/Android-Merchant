<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        tools:context=".ManagerPanel.AddRoomActivity"
        android:background="@drawable/employee_home_background">

        <ImageView
            android:id="@+id/ivRoom"
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:src="@drawable/room_review" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:text="@string/name"
            android:textSize="25sp"/>

        <EditText
            android:id="@+id/etAddRoomName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/edText"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:text="@string/roomSize"
            android:textSize="25sp"/>

        <EditText
            android:id="@+id/etAddRoomSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/edText"
            android:hint="@string/sqrtmeter"
            android:inputType="number"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:text="@string/bed"
            android:textSize="25sp"/>

        <EditText
            android:id="@+id/etAddRoomBed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/edText"
            android:inputType="number"
            android:hint="@string/bedQuantity"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:text="@string/roomAdult"
            android:textSize="25sp"/>

        <EditText
            android:id="@+id/etAddRoomAdult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/edText"
            android:inputType="number"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:text="@string/roomChild"
            android:textSize="25sp"/>

        <EditText
            android:id="@+id/etAddRoomChild"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/edText"
            android:inputType="number"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:text="@string/roomQuantity"
            android:textSize="25sp"/>

        <EditText
            android:id="@+id/etAddRoomPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/edText"
            android:inputType="number"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:text="@string/roomPrice"
            android:textSize="25sp"/>

        <EditText
            android:id="@+id/etAddRoomQuantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/edText"
            android:inputType="number"/>

        <android.support.v7.widget.CardView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginVertical="50dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="12dp">

            <Button
                android:id="@+id/btnAddRoom"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:background="@color/btcolor"
                android:textStyle="bold"
                android:text="@string/add"
                android:textSize="20sp"/>

        </android.support.v7.widget.CardView>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>